{
  "version": "0.1.0",
  "command": "sh",
  "args": [
    "-c"
  ],
  "isShellCommand": true,
  "showOutput": "silent",
  "suppressTaskName": true,
  "echoCommand": true,
  "tasks": [
    {
      "taskName": "Build",
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": [
          "relative",
          "${workspaceRoot}/src"
        ],
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        }
      },
      "isBuildCommand": true,
      "args": [
        "cd ${workspaceRoot}/src && npm run src:compile"
      ]
    }
  ]
}
